<!DOCTYPE html>
<html lang="es">

    <head>
        <meta charset="UTF-8">

        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <title>Chat</title>

        <link rel="stylesheet" href="./css/chat.css">

    </head>

    <body>

        <section class="chat-container">

            <article class="message-container">

                <div id="chat-messages">

                {{#each messages}}

                    <p class="message"> <strong>{{user}} :</strong> {{message}}  </p>
                    <hr>
                {{/each}}

                </div>

                <!-- Agrega un formulario para enviar nuevos mensajes -->
                <form id="message-form" action="/message" method="post">

                    <input type="text" id="user" placeholder="Tu nombre de usuario..." name="user">

                    <input type="text" id="message" placeholder="Escribe tu mensaje" name="message">

                    <button type="submit"> Enviar </button>
                    
                </form>

            </article>

            

        </section>

        
    </body>

</html>